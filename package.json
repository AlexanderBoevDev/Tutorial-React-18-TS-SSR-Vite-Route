{
  "name": "react-tutorial",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development node server",
    "mock": "json-server --watch src/database/db.json -p 4301 -d 0",
    "dev:mock": "concurrently \"npm run dev\" \"npm run mock\"",
    "build": "rm -rf dist && npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "serve:mock": "concurrently \"NODE_ENV=production node server\" \"npm run mock\"",
    "serve": "NODE_ENV=production node server"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@testing-library/user-event": "^14.4.3",
    "axios": "^1.4.0",
    "bootstrap": "^5.3.0",
    "concurrently": "^8.2.0",
    "env-development": "^1.0.2",
    "h3": "^1.7.0",
    "i18next": "^23.2.7",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.1",
    "json-server": "^0.17.4",
    "listhen": "^1.0.4",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.1",
    "million": "^2.4.9",
    "primeicons": "^6.0.1",
    "primereact": "^9.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.0.1",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.14.2",
    "react-world-flags": "^1.5.1",
    "sass": "^1.63.6",
    "sirv": "^2.0.3",
    "sort-by": "^1.2.0",
    "swiper": "^9.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "typescript": "^5.1.3",
    "vite": "^3.2.7"
  }
}
